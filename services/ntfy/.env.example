# NTFY Configuration Variables
NTFY_BASE_URL=https://your-domain.com
NTFY_LISTEN_HTTP=:80
NTFY_CACHE_FILE=/var/cache/ntfy/cache.db
NTFY_CACHE_DURATION=12h
NTFY_AUTH_FILE=/var/lib/ntfy/user.db
NTFY_AUTH_DEFAULT_ACCESS=deny-all
NTFY_AUTH_USERS=username:$2a$10$passwordhash:user,another:$2a$10$anotherhash:user
NTFY_AUTH_ACCESS=username:mytopic:rw,another:alerts-*:rw,*:announcements:ro
NTFY_ENABLE_LOGIN=true
NTFY_ATTACHMENT_CACHE_DIR=/var/cache/ntfy/attachments
NTFY_ATTACHMENT_TOTAL_SIZE_LIMIT=5G
NTFY_ATTACHMENT_FILE_SIZE_LIMIT=15M
NTFY_ATTACHMENT_EXPIRY_DURATION=3h
NTFY_BEHIND_PROXY=true

# Email Configuration (SMTP)
NTFY_SMTP_SENDER_ADDR=smtp.your-provider.com:587
NTFY_SMTP_SENDER_FROM=notifications@your-domain.com
NTFY_SMTP_SENDER_USER=notifications@your-domain.com
NTFY_SMTP_SENDER_PASS=your-smtp-password

# Port Configuration
NTFY_PORT=8094
